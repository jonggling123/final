<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ddit.finalproject.team2.common.dao.Ljs_IReplyDao">
	<select id="selectReplyCount" parameterType="string" resultType="int">
		SELECT COUNT(*)
		FROM REPLY
		WHERE BOARD_NO = #{board_no}
	</select>
	
	<select id="selectReplyList" parameterType="string" resultType="ddit.finalproject.team2.vo.ReplyVo">
		SELECT * FROM REPLY
		WHERE BOARD_NO = #{board_no}
	</select>
</mapper>